---
interface Props {
  fields: string[];
}
const { fields } = Astro.props;
/* Navigation component that receives a list of fields and renders a list of links*/
---
  <nav>
    <ul>
        {fields.map((field: string) => (
          <li>
            <a href=
            {`/${
              field === 'Inicio' 
              ? '' 
              : field.toLowerCase()
            }`}>
              {field}
            </a>
          </li>
        ))}
    </ul>
  </nav>

<style>
  nav {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
    height: 100%;
    border: 1px solid #333;
  }
  ul {
    margin: 0;
    display: flex;
    list-style: none;
    padding: 0;
  }
  li {
    margin: 0 1rem;
  }
  a {
    border: 1px solid #333;
    text-decoration: none;
    color: #333;
  }
  a:hover {
    color: #0070f3;
  }
</style>