---
import { storyblokEditable } from '@storyblok/astro'
 
const { blok } = Astro.props
---
<div {...storyblokEditable(blok)}>
    <div class="big-div" style={`--width: ${blok.width}%`}>
        <h1>{blok.text}</h1>
    </div>
</div>


<style>
    .big-div {
        width: var(--width);
        height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid red;
    }
</style>