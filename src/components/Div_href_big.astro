---
// Div-href-big.astro
interface Props {
  title: string,
  href: string,
  style: string
}
const {title,href,style} = Astro.props;
---
<a href={href}>
  <div class={`header flex justify-center items-center stylized-text ${style === 'left' ? 'slideInFromLeft' : 'slideInFromRight'}`}>
    <p>{title}</p>
  </div>
</a>


<style>
  div {
    width: 200px;
    height: 200px;
    background-color: white;
    box-shadow: 0 0 5px var(--primary);
    padding: 1rem;
    transition: all 0.2s ease-in-out;
    border-radius: 5px;
  }
  div:hover {
    box-shadow: 0 0 15px var(--primary);
  }
  @keyframes slideInFromRight {
    0% {
      opacity: 0%;
      transform: translateX(10px);
    }
    100% {
      opacity: 100%;
      transform: translateX(0);
    }
  }

  @keyframes slideInFromLeft {
    0% {
      opacity: 0%;
      transform: translateX(-10px);
    }
    100% {
      opacity: 100%;
      transform: translateX(0);
    }
  }

  .slideInFromLeft {
    animation: slideInFromLeft 900ms ease-in-out;
  }

  .slideInFromRight {
    animation: slideInFromRight 900ms ease-in-out;
  }
</style>