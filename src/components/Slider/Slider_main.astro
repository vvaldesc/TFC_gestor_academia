---
//import Slider from './Slider_main/App';
// @ts-ignore
import main_promo from '@/consts/main_promo.json';
---
<div class="container">
    <h2 class="header-text-promoTitle">{main_promo.promos[0].title}</h2>
    <h2 class="header-text-promoSubtitle">{main_promo.promos[0].subtitle}</h2>
    <h2 class="header-text-promoDescription">{main_promo.promos[0].description}</h2>
</div>

<style>
    .container {
        position: relative;
        width: 900px;
        height: 100%;
        margin: auto;
    }
    .header-text-promoTitle {
        position: absolute;
        top: 10px;
    }

    .header-text-promoSubtitle {
        position: absolute;
        top: 200px;

    }

    .header-text-promoDescription {
        position: absolute;
        top: 280px;
    }
</style>